<html>
    <head>
        <title> Random number guessing game </title>
    </head>
    <body> 
        <p>Enter a number between range (1-5)</p>

        <input id="inp" type="text">
        <button id="add">Submit</button>
        
        <script>
            var userinput = 0;
            document.getElementById("add").onclick = function()
            {
                userinput = document.getElementById("inp").value
                // alert(userinput);  //Just to check 
                var answer =  Math.floor(Math.random() *5) + 1;
                //console.log(answer) // to check what random value is been generated
                
                
                if(userinput==answer)
                {
                    alert("User won the game!!")
                }
                else
                {
                    alert("User guessed the number wrong!!. Try AGAIN!!")
                }
            }
        </script>
    </body>
</html>
